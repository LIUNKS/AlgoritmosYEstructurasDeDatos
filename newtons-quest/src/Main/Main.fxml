<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.Font?>
<?import javafx.geometry.Insets?>

<StackPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" 
           fx:controller="Controlador.MainController"
           prefWidth="800" prefHeight="600">
    
    <!-- Contenido del menú -->
    <VBox alignment="CENTER" spacing="30">
        <!-- Título del juego -->
        <VBox alignment="CENTER" spacing="10">
            <Text text="Newton's" fill="WHITE" styleClass="title-text">
                <font>
                    <Font name="System Bold" size="50" />
                </font>
            </Text>
            <Text text="Apple Quest" fill="#ff6b6b" styleClass="title-text">
                <font>
                    <Font name="System Bold" size="60" />
                </font>
            </Text>
            <Text text="Una aventura física" fill="WHITE" styleClass="subtitle-text">
                <font>
                    <Font size="24" />
                </font>
            </Text>
        </VBox>
        
        <!-- Botones del menú -->
        <VBox alignment="CENTER" spacing="15" maxWidth="300">
            <padding>
                <Insets top="40" />
            </padding>
            <Button fx:id="startButton" text="Iniciar Juego" styleClass="menu-button" maxWidth="Infinity" />
            <Button fx:id="rulesButton" text="Reglas" styleClass="menu-button" maxWidth="Infinity" />
            <Button fx:id="settingsButton" text="Configuración" styleClass="menu-button" maxWidth="Infinity" />
        </VBox>
        
        <!-- Fórmulas físicas decorativas -->
        <Text text="F = ma    E = mc²    F = G(m₁m₂)/r²" styleClass="formula-text">
            <VBox.margin>
                <Insets top="50" />
            </VBox.margin>
        </Text>
    </VBox>
</StackPane>